{
  "name": "fintech-tracker",
  "version": "0.1.0",
  "description": "Bloomberg Terminal for the Everyman",
  "private": true,
  "scripts": {
    "dev": "./scripts/start.sh",
    "start": "./scripts/start.sh",
    "stop": "./scripts/stop.sh",
    "backend": "cd backend && source venv/bin/activate && python -m app.main",
    "frontend": "cd frontend && npm run dev",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "logs:backend": "tail -f logs/backend.log",
    "logs:frontend": "tail -f logs/frontend.log"
  },
  "author": "Chris Parker",
  "license": "MIT"
}
